@model LibraryBook.Models.Book

@{
    ViewData["Title"] = "Create";
}

<h1>Добавить книгу</h1>
<link rel="stylesheet" href="~/css/Style_Create.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/dobAuthor.css" asp-append-version="true" />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateCreated" class="control-label"></label>
                <input asp-for="DateCreated" class="form-control" type="date" />
                <span asp-validation-for="DateCreated" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pages" class="control-label"></label>
                <input asp-for="Pages" class="form-control" />
                <span asp-validation-for="Pages" class="text-danger"></span>
            </div>
            <div class="form-group4" link rel="stylesheet" href="~/css/Edit.css">
              @*  @if (Model.Image != null)
                {
                     <img src="@Model.Image" />
                     @Html.HiddenFor(model=>model.Image)
                }*@
                <label asp-for="Image" class="control-label"></label>
                <input name="file" id="file" type="file" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group2">
                <label asp-for="AuthorId" class="control-label"></label>
                @Html.DropDownListFor(model=>model.AuthorId,(IEnumerable<SelectListItem>)ViewBag.AuthorId,String.Empty, new{htmlAttributes = new{ @class="form-control"}})
                <span asp-validation-for="AuthorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Genre" class="control-label"></label>
                  @Html.ListBox("Genre", (IEnumerable<SelectListItem>)@ViewBag.MoreGenre, new { htmlAttributes = new { @class = "form-control"} })
                <script>
                    document.getElementById("Genre").classList = "form-control";
                    document.getElementById("Genre").selected = @ViewBag.MoreGenre;
                </script>
            </div>
            <div class="form-group">
                <link rel="stylesheet" href="~/css/Edit.css" asp-append-version="true" />
                <input type="submit" value="Добавить" class="knopka1" />
            </div>
        </form>
    </div>
</div>

<div class="rastoyanie">
    <link rel="stylesheet" href="~/css/dobAuthor.css" asp-append-version="true" />
    <a asp-action="Index"  class="knopka11" >Назад</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
